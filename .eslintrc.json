{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "*",
                "bannedExternalImports": ["fp-ts/lib/*", "io-ts/lib/*"]
              },
              {
                "sourceTag": "tier:lib",
                "onlyDependOnLibsWithTags": ["tier:lib"]
              },
              {
                "sourceTag": "tier:domain",
                "onlyDependOnLibsWithTags": ["tier:domain", "tier:lib"],
                "bannedExternalImports": ["react*"]
              },
              {
                "sourceTag": "tier:use-case",
                "onlyDependOnLibsWithTags": [
                  "tier:use-case",
                  "tier:domain",
                  "tier:lib"
                ],
                "bannedExternalImports": ["react*"]
              },
              {
                "sourceTag": "tier:api",
                "onlyDependOnLibsWithTags": [
                  "tier:api",
                  "tier:use-case",
                  "tier:lib"
                ]
              },
              {
                "sourceTag": "tier:app",
                "onlyDependOnLibsWithTags": ["tier:app", "tier:api", "tier:lib"]
              },
              {
                "sourceTag": "slice:realtor-registry",
                "onlyDependOnLibsWithTags": [
                  "slice:realtor-registry",
                  "slice:apis",
                  "slice:common"
                ]
              },
              {
                "sourceTag": "slice:realtor-management",
                "onlyDependOnLibsWithTags": [
                  "slice:realtor-management",
                  "slice:apis",
                  "slice:common"
                ]
              },
              {
                "sourceTag": "slice:tenant-management",
                "onlyDependOnLibsWithTags": [
                  "slice:tenant-management",
                  "slice:apis",
                  "slice:common"
                ]
              },
              {
                "sourceTag": "slice:remote-offer-register",
                "onlyDependOnLibsWithTags": [
                  "slice:remote-offer-register",
                  "slice:apis",
                  "slice:common"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ]
}
