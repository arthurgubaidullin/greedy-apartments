{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ga/realtor-document-in-registry": [
        "realtor-registry/realtor-document/src/index.ts"
      ],
      "@ga/realtor-id": ["realtor-id/src/index.ts"],
      "@ga/realtor-in-registry": ["realtor-registry/realtor/src/index.ts"],
      "@ga/realtor-repository-in-registry": [
        "realtor-registry/realtor-repository/src/index.ts"
      ],
      "@ga/register-realtor": ["realtor-registry/register-realtor/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
